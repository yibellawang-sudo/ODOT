{
    "manifest_version": 3,
    "name": "ODOT",
    "version": "4.0.0",
    "description": "Tracks your screen time and roasts you",
    "permissions": [
        "tabs",
        "storage",
        "alarms",
        "notifications",
        "nativeMessaging"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}